{
  "name": "vocabdict-safari-extension",
  "version": "1.0.0",
  "description": "VocabDict Safari Extension - English Learning Tool",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:all": "npm run test:unit && npm run test:integration",
    "lint": "eslint \"Shared (Extension)/Resources/**/*.js\" \"tests/**/*.js\"",
    "lint:fix": "eslint \"Shared (Extension)/Resources/**/*.js\" \"tests/**/*.js\" --fix"
  },
  "keywords": [
    "safari-extension",
    "vocabulary",
    "english-learning",
    "spaced-repetition",
    "dictionary"
  ],
  "author": "VocabDict Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-jest": "^29.5.0",
    "eslint": "^8.42.0",
    "fake-indexeddb": "^4.0.2",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-webextension-mock": "^3.8.9",
    "selenium-webdriver": "^4.15.0",
    "web-ext": "^7.6.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup/jest.simplified.setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/unit/**/*.test.js",
      "<rootDir>/tests/integration/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/tests/e2e/",
      "<rootDir>/tests/manual/",
      "node_modules/"
    ],
    "collectCoverageFrom": [
      "Shared (Extension)/Resources/**/*.js",
      "!Shared (Extension)/Resources/images/**",
      "!Shared (Extension)/Resources/_locales/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageDirectory": "coverage",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/Shared (Extension)/Resources/$1"
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true,
      "webextensions": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "globals": {
      "browser": "readonly",
      "chrome": "readonly"
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "no-console": "off"
    }
  }
}