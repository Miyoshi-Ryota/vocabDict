{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "UpdateSettingsRequest",
  "description": "Request to update user settings.",
  "type": "object",
  "required": ["action", "settings"],
  "properties": {
    "action": {
      "type": "string",
      "const": "updateSettings",
      "description": "The action to be performed. Must be 'updateSettings'."
    },
    "settings": {
      "type": "object",
      "description": "Settings to update.",
      "properties": {
        "theme": {
          "type": "string",
          "enum": ["light", "dark", "auto"]
        },
        "autoPlayPronunciation": {
          "type": "boolean"
        },
        "showExampleSentences": {
          "type": "boolean"
        },
        "textSelectionMode": {
          "type": "string",
          "enum": ["inline", "popup"]
        }
      }
    }
  }
}