{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "FetchLookupStatsResponse",
  "description": "Response containing lookup statistics.",
  "type": "object",
  "required": ["success"],
  "properties": {
    "success": {
      "type": "boolean",
      "description": "Whether the fetch was successful."
    },
    "stats": {
      "type": "object",
      "description": "Lookup statistics by word.",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "word": { "type": "string" },
          "count": { "type": "integer", "minimum": 0 },
          "firstLookup": { "type": "string", "format": "date-time" },
          "lastLookup": { "type": "string", "format": "date-time" }
        }
      }
    },
    "error": {
      "type": "string",
      "description": "Error message if the operation failed."
    }
  }
}
