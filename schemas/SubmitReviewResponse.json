{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SubmitReviewResponse",
  "description": "Response from submitting a review result.",
  "type": "object",
  "required": ["success"],
  "properties": {
    "success": {
      "type": "boolean",
      "description": "Whether the review was successfully submitted."
    },
    "data": {
      "type": "object",
      "description": "Updated word data and scheduling after review.",
      "properties": {
        "word": {
          "type": "object",
          "description": "Full user-specific word entry after update.",
          "properties": {
            "word": { "type": "string" },
            "dateAdded": { "type": "string", "format": "date-time" },
            "difficulty": { "type": "integer" },
            "customNotes": { "type": "string" },
            "lastReviewed": { "type": ["string", "null"], "format": "date-time" },
            "nextReview": { "type": "string", "format": "date-time" },
            "reviewHistory": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "date": { "type": "string", "format": "date-time" },
                  "result": { "type": "string" },
                  "timeSpent": { "type": "number" }
                }
              }
            }
          }
        },
        "nextReview": {
          "type": "string",
          "format": "date-time",
          "description": "Next scheduled review date."
        },
        "nextInterval": {
          "type": ["integer", "null"],
          "description": "Days until next review; null if mastered."
        }
      }
    },
    "error": {
      "type": "string",
      "description": "Error message if the operation failed."
    }
  }
}
