{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AddWordToVocabularyListResponse",
  "description": "Response from adding a word to a vocabulary list.",
  "type": "object",
  "required": ["success"],
  "properties": {
    "success": {
      "type": "boolean",
      "description": "Whether the word was successfully added."
    },
    "data": {
      "type": "object",
      "description": "The user-specific word entry as stored.",
      "properties": {
        "word": { "type": "string" },
        "dateAdded": { "type": "string", "format": "date-time" },
        "difficulty": { "type": "integer", "minimum": 1 },
        "customNotes": { "type": "string" },
        "lastReviewed": { "type": ["string", "null"], "format": "date-time" },
        "nextReview": { "type": "string", "format": "date-time" },
        "reviewHistory": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "date": { "type": "string", "format": "date-time" },
              "result": { "type": "string" },
              "timeSpent": { "type": "number", "minimum": 0 }
            }
          }
        }
      }
    },
    "error": {
      "type": "string",
      "description": "Error message if the operation failed."
    }
  }
}
