{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "FetchAllVocabularyListsResponse",
  "description": "Response containing all vocabulary lists.",
  "type": "object",
  "required": ["success"],
  "properties": {
    "success": {
      "type": "boolean",
      "description": "Whether the fetch was successful."
    },
    "vocabularyLists": {
      "type": "array",
      "description": "Array of vocabulary lists.",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "name": { "type": "string" },
          "isDefault": { "type": "boolean" },
          "created": { "type": "string", "format": "date-time" },
          "words": { "type": "object" }
        }
      }
    },
    "error": {
      "type": "string",
      "description": "Error message if the operation failed."
    }
  }
}
