{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "FetchAllVocabularyListsResponse",
  "description": "Response containing all vocabulary lists.",
  "type": "object",
  "required": ["success"],
  "properties": {
    "success": {
      "type": "boolean",
      "description": "Whether the fetch was successful."
    },
    "vocabularyLists": {
      "type": "array",
      "description": "Array of vocabulary lists.",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "name": { "type": "string" },
          "isDefault": { "type": "boolean" },
          "createdAt": { "type": "string", "format": "date-time" },
          "words": {
            "type": "object",
            "additionalProperties": { "$ref": "#/$defs/UserWordData" }
          }
        }
      }
    },
    "error": {
      "type": "string",
      "description": "Error message if the operation failed."
    }
  },
  "$defs": {
    "ReviewHistoryEntry": {
      "type": "object",
      "properties": {
        "date": { "type": "string", "format": "date-time" },
        "result": { "type": "string" },
        "timeSpent": { "type": "number" }
      }
    },
    "UserWordData": {
      "type": "object",
      "properties": {
        "word": { "type": "string" },
        "dateAdded": { "type": "string", "format": "date-time" },
        "difficulty": { "type": "integer", "minimum": 1 },
        "customNotes": { "type": "string" },
        "lastReviewed": { "type": ["string", "null"], "format": "date-time" },
        "nextReview": { "type": "string", "format": "date-time" },
        "reviewHistory": {
          "type": "array",
          "items": { "$ref": "#/$defs/ReviewHistoryEntry" }
        }
      }
    }
  }
}
