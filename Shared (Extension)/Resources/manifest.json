{
    "manifest_version": 3,
    "default_locale": "en",

    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "1.0",

    "icons": {
        "48": "images/icon-48.png",
        "96": "images/icon-96.png",
        "128": "images/icon-128.png",
        "256": "images/icon-256.png",
        "512": "images/icon-512.png"
    },

    "background": {
        "scripts": [
            "constants.js",
            "models.js",
            "database.js",
            "dictionary.js",
            "handlers.js",
            "init.js"
        ],
        "persistent": false
    },

    "content_scripts": [{
        "js": [ "constants.js", "content.js" ],
        "css": [ "content.css" ],
        "matches": [ "<all_urls>" ],
        "run_at": "document_idle"
    }],

    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/toolbar-icon.svg"
    },

    "permissions": [
        "storage",
        "unlimitedStorage",
        "contextMenus",
        "activeTab"
    ],

    "commands": {
        "lookup-selection": {
            "suggested_key": {
                "default": "Ctrl+Shift+L",
                "mac": "Command+Shift+L"
            },
            "description": "Look up selected text in VocabDict"
        }
    }
}
